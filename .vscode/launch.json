{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "DiffDRR DRR Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/batch_generate_drr.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "--patients", "2",
                "--use_bone", "1",
                "--hu_threshold", "10"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "train",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/train_pix2pix.py",
            "console": "integratedTerminal",
            "args": [
                "--epochs", "200",
                "--batch_size", "8",
                "--lr", "1e-4",
                "--lambda_l1", "50",
                "--lambda_edge", "1",
                "--lambda_ssim", "1",
                "--lambda_perc", "1"
            ]
        }
    ]
}
