    "version": "0.2.0",
    "configurations": [
        {
            "name": "DiffDRR DRR Generation",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/batch_generate_drr.py",
            "console": "integratedTerminal",
            "justMyCode": false,
            "args": [
                // "--patients", "2",
                "--use_bone", "1",
                "--hu_threshold", "50"
            ],
            "env": {
                "CUDA_VISIBLE_DEVICES": "0"
            }
        },
        {
            "name": "train-Pix2Pix",
            "type": "debugpy",
            "request": "launch",
            "program": "${workspaceFolder}/code/train_pix2pix.py",
